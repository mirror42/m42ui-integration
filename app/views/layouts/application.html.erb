<!DOCTYPE html>
<html>
<head>
  <title>Mirror42 UI Integration Example</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<%- if params[:framed] %>

  <%= yield %>

<%- else %>

  <div id="masthead">
    <h2>Mirror42 UI Integration Example</h2>
  </div>

  <div id="menu">
    <a href="/products">My Application</a>
    <a href="/mirror42/scorecards">Scorecards</a>
    <a href="/mirror42/dashboards">Dashboards</a>
    <a href="/mirror42/dashboards?iframe=1">iDashboards</a>
    <a href="/mirror42/messages">Messages</a>
  </div>

  <div id="content">
    <%- if params[:iframe] %>
      <iframe src="<%= request.path %>?framed=1" frameborder="0" style="height:2000px;width:100%;" scrolling="no">
    <%- else %>
      <%= yield %>
    <%- end %>
  </div>

<%- end %>

</body>
</html>
